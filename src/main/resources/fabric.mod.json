    "falseresync"
  ],
  "contact": {
    "homepage": "https://falseresync.ru",
    "sources": "https://github.com/falseresync/explorers-delight"
  },

  "license": "MIT",
  "icon": "assets/exdel/textures/item/recall_potion.png",

  "environment": "*",
  "entrypoints": {
